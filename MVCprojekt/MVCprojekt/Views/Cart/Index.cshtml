@model List<MVCprojekt.Models.CartProductViewModel>

@{
    ViewBag.Title = "Koszyk";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (ViewBag.Ordered != null)
{
    <h1>@ViewBag.Ordered</h1>
}
else
{
    if (Model.Count == 0)
    {
        @Html.ActionLink("Dodaj produkt", "PlusOne", new {id = 1004})
    }
    else
    {
        <table class="table">
            <tr>
                <th>
                    Nazwa
                </th>
                <th>
                    Ilo��
                </th>
                <th>
                    Cena
                </th>
                <th>
                    Suma
                </th>
                <th>
                    Akcje
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Amount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sum)
                    </td>
                    <td>
                        @Html.ActionLink("Dodaj "+ item.Name, "PlusOne", new { id = item.ProductID }) |
                        @Html.ActionLink("Usu� " + item.Name, "MinusOne", new { id = item.ProductID }) |
                        @Html.ActionLink("Usu� wszystkie", "Remove", new { id = item.ProductID })
                    </td>
                </tr>
            }
        </table>
        <br/>
        using (Html.BeginForm("PlaceOrder", "Cart"))
        {
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Zamów" class="btn btn-default"/>
                </div>
            </div>
        }
    }
}
